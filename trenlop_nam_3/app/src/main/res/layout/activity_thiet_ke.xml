<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".thiet_ke">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_diem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điểm"
        android:layout_marginLeft="20dp"
     />

    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/edt_diem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"

        android:text="số điểm"
       />
</LinearLayout>

    <TextView
        android:id="@+id/tv_cauhoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="câu hỏi:"
android:layout_marginLeft="20dp"        />

    <EditText
        android:id="@+id/edt_cauhoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:textSize="17dp"
      android:layout_marginLeft="20dp"
        android:text="thông tin cau hỏi"
        />
<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_dan1"
        android:background="@drawable/custom_color_button"
        android:textColor="@drawable/custom_color_text"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="đáp án 1"
       />

    <Button
        android:id="@+id/btn_dan2"
        android:background="@drawable/custom_color_button"
        android:textColor="@drawable/custom_color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="đáp án 2"
       />
</LinearLayout>
<LinearLayout
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button

        android:id="@+id/btn_dan3"
        android:background="@drawable/custom_color_button"
        android:textColor="@drawable/custom_color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="đáp án 3"
       />

    <Button
        android:id="@+id/btn_dan4"
        android:background="@drawable/custom_color_button"
        android:textColor="@drawable/custom_color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="đáp án 4"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="341dp" />
</LinearLayout>

    <Button
        android:id="@+id/btn_tieptuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiep tuc"
        android:background="@drawable/custom_color_button"
        android:textColor="@drawable/custom_color_text"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
         />
</LinearLayout>