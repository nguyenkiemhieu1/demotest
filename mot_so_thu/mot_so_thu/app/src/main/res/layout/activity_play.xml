<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cb_5050"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="50|50" />

            <CheckBox
                android:id="@+id/cb_hoiykien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Hỏi ý kiến" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cb_goidien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Gọi điện thoại" />

            <CheckBox
                android:id="@+id/cb_quacaunay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"


                android:text="Qua câu này" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/tv_thongbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo" />

            <TextView
                android:id="@+id/tv_thoigian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="time" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cauhoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Nội dung câu hỏi" />
        </LinearLayout>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/rg_dapan"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_cau1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cau1"/>
        <RadioButton
            android:id="@+id/rb_cau2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cau2"/>
        <RadioButton
            android:id="@+id/rb_cau3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cau3"/>
        <RadioButton
            android:id="@+id/rb_cau4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cau4"/>


    </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <Button
            android:text="xac nhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_next"/>
        <Button
            android:text=" xac nhan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_check"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lấy tiền" />
    </LinearLayout>
</LinearLayout>